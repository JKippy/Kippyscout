{
    "functions": {
      "source": "frc-api-backend/functions",  
      "runtime": "nodejs18",  
      "timeoutSeconds": 540,  
      "memory": "256MB"       
    },
    "hosting": {
      "public": "frc-scouting/build",  
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/**",  
          "function": "api"      
        },
        {
          "source": "**",        
          "destination": "/index.html"
        }
      ]
    },
    "firestore": {
      "rules": "firestore.rules",  
      "indexes": "firestore.indexes.json"  
    },
    "emulators": {
      "auth": {
        "port": 9099
      },
      "firestore": {
        "port": 8080
      },
      "hosting": {
        "port": 5000  
      },
      "ui": {
        "enabled": true  
      },
      "singleProjectMode": true  
  }
}
  